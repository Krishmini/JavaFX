        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Bienvenu !" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Votre Email :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Votre mot de passe :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label fx:id="errorLabel" text="Label pour erreur" GridPane.rowIndex="3" GridPane.columnIndex="1" visible="false"/>

    <Button text="Connexion" onAction="#connexion" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button text="Mot de passe oubliÃ©" onAction="#motDePasseOublie" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
